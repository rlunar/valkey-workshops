# OPN402 Workshop Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Database Configuration
# Supported: sqlite, mysql, postgresql
DATABASE_URL=sqlite:///workshop_airport.db

# For MySQL:
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/workshop_airport

# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/workshop_airport

# Valkey/Redis Cache Configuration
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_PASSWORD=
VALKEY_DATABASE=0

# Optional: Valkey connection pool settings
VALKEY_MAX_CONNECTIONS=10
VALKEY_SOCKET_TIMEOUT=5
VALKEY_SOCKET_CONNECT_TIMEOUT=5

# Workshop Configuration
WORKSHOP_DEBUG=false
WORKSHOP_LOG_LEVEL=INFO

# Performance Metrics
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=1

# External API Simulation
WEATHER_API_BASE_LATENCY_MS=250
WEATHER_API_MAX_LATENCY_MS=500
WEATHER_API_FAILURE_RATE=0.05